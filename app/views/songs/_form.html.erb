<h1><%= @song.id ? 'Edit Song' : 'Create Song' %></h1>
<hr />
<div>
  <%= form_for [@artist, @song] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, required: true, autofocus: true %>
    <br>
    <%= f.label :duration %>
    <%= f.text_field :duration %>
    <br>
    <%= f.label :artwork %>
    <%= f.text_field :artwork  %>
    <br>
    <%= f.label :artist %>
    <%= f.text_field :artist  %>
    <br>
    <%= f.submit %>
  <% end %>
</div>
